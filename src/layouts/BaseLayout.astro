---
import '../styles/global.css';
import Footer from '../components/Footer.astro';

// Props for page-specific metadata
export interface Props {
  title?: string;         // Page-specific title
  description?: string;   // Page description
  canonicalUrl?: string;  // Full URL for canonical / OG
  socialImageUrl?: string; // OG / Twitter image
}

// Defaults
const {
  title = "asteria's website",                   // title for discord / OG
  description = "meow meow meow meow meow meow",
  canonicalUrl = "/",                              // relative URL works on all environments
  socialImageUrl = "/social-image.png",           // relative path from public/
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#8DA3B9">

    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalUrl}>

    <!-- Open Graph / Discord -->
    <meta property="og:site_name" content="asteria.himejoshi.gay">
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={socialImageUrl}>

    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@asteriau">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={socialImageUrl}>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>
